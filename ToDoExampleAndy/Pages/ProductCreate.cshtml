@page
@model ToDoExampleAndy.Pages.ProductCreateModel
@{
}
<h1>Add Item</h1>

<div class="container border p-5">
    <form method="post">
        <!-- Name Field -->
        <div class="form-group row">
            <div class="col-4">
                <label>Name:</label>
            </div>
            <div class="col-8">
                <input asp-for="Item.Name" class="form-control" />

            </div>
        </div>

        <!-- Description Checkbox -->
        <div class="form-group row">
            <div class="col-4">
                <label>Description?:</label>
            </div>
            <div class="col-8">
                <input asp-for ="Item.Description" class="form-control" />
            </div>
        </div>

        <!-- Price Field -->
        <div class="form-group row">
            <div class="col-4">
                <label>Price:</label>
            </div>
            <div class="col-8">
                <input type="number" step="0.01" asp-for="Item.Price" class="form-control" />
            </div>
        </div>


        <!-- Quantity Field -->
        <div class="form-group row">
            <div class="col-4">
                <label>Quantity:</label>
            </div>
            <div class="col-8">
                <input type="number" step="1" asp-for="Item.Quantity" class="form-control" />
            </div>
        </div>


        <!-- Image Field -->
        <div class="form-group row">
            <div class="col-4">
                <label>Image:</label>
            </div>
            <div class="col-8">
                <input asp-for="Item.ImagePath" class="form-control" />
            </div>
        </div>


        <!-- Submit Button -->
        <div class="form-group row">
            <div class="col">
                <button type="submit" class="btn btn-block btn-secondary">Add Task</button>
            </div>
        </div>
    </form>
</div>
