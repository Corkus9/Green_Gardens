@page
@model ToDoExampleAndy.Pages.RegisterModel
@{
}
<h1>Register</h1>

<div class="container border p-5">
    <form method="post">
        <!-- Firstname Field -->
        <div class="form-group">
            <label>Firstname:</label>
            <input asp-for="User.Fname" class="form-control" />
        </div>

        <!-- Surname Field -->
        <div class="form-group">
            <label>Surname:</label>
            <input asp-for="User.Sname" class="form-control" />
        </div>

        <!-- Email Field -->
        <div class="form-group">
            <label>Email:</label>
            <input asp-for="User.Email" type="email" class="form-control" />
        </div>

        <!-- Password Field -->
        <div class="form-group">
            <label>Password:</label>
            <input asp-for="User.Password" type="password" class="form-control" />
        </div>

        <div class="form-group d-none">
            <input asp-for="User.Admin" type ="hidden" readonly = "" value = "Customer" />


        </div>





        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
</div>