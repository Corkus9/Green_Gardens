@page "{id:int}"
@model ToDoExampleAndy.Pages.EditModel

<h1>Edit Item</h1>

<form method="post">
    <input type="hidden" asp-for="Item.Id" />

    <div class="form-group">
        <label for="Item_Description">Description</label>
        <input asp-for="Item.Description" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Item_Completed">Completed</label>
        <input asp-for="Item.Completed" type="checkbox" />
    </div>

    <div class="form-group">
        <label for="Item_DueDate">Due Date</label>
        <input asp-for="Item.DueDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
